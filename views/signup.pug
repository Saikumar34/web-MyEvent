extends layout
block content
    nav(class="navbar navbar-inverse")
        div(class="container-fluid")
            div(class="navbar-header")
                a(class="navbar-brand" href="/") MyEvent
            ul(class="nav navbar-nav")
                li
                    a(href="/") Home
                li 
                    a(href="/about") About
                li 
                    a(href="/upcomingevents") Upcoming Events
            ul(class="nav navbar-nav navbar-right")
                li(class="active")
                    a(href="/signup") 
                        span(class="glyphicon glyphicon-user") SignUp
                li() 
                    a(href="/login") 
                        span(class="glyphicon glyphicon-log-in") Login
    div.container
        h2 Signup Form
        form(action="/signup" method="POST")
            div(class="form-group")
                label(for="fn") First Name: 
                input(type="text" class="form-control short" id="fn" placeholder="Enter first name" name="fn" required)
            div(class="form-group ")
                label(for="ln") Last Name:
                input(type="text" class="form-control short" id="ln" placeholder="Enter Last name" name="ln" required)
            div(class="form-group ")
                label(for="email") Email:
                input(type="email" class="form-control short" id="email" placeholder="Enter email" name="email" required)
            div(class="form-group")
                label(for="pwd") Password:
                input(type="password" class="form-control short" id="pwd" placeholder="Enter password" name="pwd" required)
            div(class="form-group")
                label(for="repwd") Re-Enter Password:
                input(type="password" class="form-control short" id="repwd" placeholder="Re-Enter password" name="repwd" required)
            button(type="submit" class="btn btn-default") Signup
        p(id="pa")